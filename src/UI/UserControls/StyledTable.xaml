<UserControl x:Class="UI.UserControls.StyledTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UI.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance local:StyledTable}">
    <Grid>
        <ListView ItemsSource="{Binding Items}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Index" DisplayMemberBinding="{Binding Index}" Width="100"/>
                    <!-- Добавьте другие столбцы на основе свойств вашей коллекции -->
                    <!-- Например: -->
                    <!-- <GridViewColumn Header="Property1" DisplayMemberBinding="{Binding Property1}" Width="100"/> -->
                    <!-- <GridViewColumn Header="Property2" DisplayMemberBinding="{Binding Property2}" Width="100"/> -->
                    <!-- И так далее... -->
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
